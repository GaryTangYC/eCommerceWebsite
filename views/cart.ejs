<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link href="/css/style.css" rel="stylesheet" />

    <title>Rocket eCommerce</title>
  </head>

  <body>
    <p><strong>Cart</strong></p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% cartDetails.forEach((item) => { %>
      <div class="col">
        <div class="card">
          <img
            class="card-img-top"
            src="/images/<%= item.product_name %>.jpg"
            alt="Card image cap"
          />
          <div class="card-body">
            <h5 class="card-title"><%=item.product_name %></h5>
            <h3 class="card-text">$<%=item.price %></h3>
            <p class="card-text"><%= item.summary%> <br /></p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <br />
    <form
      action="/cart"
      method="POST"
      onsubmit="return confirm('Cart items will be finalized - please confirm');"
    >
      <input
        type="hidden"
        name="orderID[]"
        value="<%= cartDetails[0].oid %> "
      />
      <input type="submit" value="Finalize Cart" />
    </form>
  </body>
  <br /><br /><br />
  <footer>
    <p><a href="/">Return to main page</a></p>
  </footer>
</html>
